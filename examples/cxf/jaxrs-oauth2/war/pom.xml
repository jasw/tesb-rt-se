<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.talend.cxf-examples.jaxrs-oauth-example</groupId>
    <artifactId>jaxrs-oauth2-service-war</artifactId>
    <name>JAX-RS OAuth2 Example War</name>
    <packaging>war</packaging>

    <parent>
        <groupId>org.talend.cxf-examples.jaxrs-oauth-example</groupId>
        <artifactId>jaxrs-oauth2-example</artifactId>
        <version>1.0</version>
        <relativePath>..</relativePath>
    </parent>
    
    <properties>
        <http.reservations.port>8080</http.reservations.port>
    </properties>    
    
    <dependencies>
        <dependency>
            <groupId>org.talend.cxf-examples.jaxrs-oauth-example</groupId>
            <artifactId>jaxrs-oauth2-service</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
           <groupId>org.codehaus.jettison</groupId>
           <artifactId>jettison</artifactId>
           <version>1.3.1</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>${spring.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${spring.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>${spring.version}</version>
        </dependency>
    </dependencies>

    <build>
        <!-- Name of the generated WAR file -->
        <finalName>services</finalName>
        <plugins>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.15</version>
                <configuration>
                    <contextPath>/${project.build.finalName}</contextPath>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <webResources>
                        <resource>
                            <!-- this is relative to the pom.xml directory -->
                            <directory>src/main/webapp</directory>
                            <filtering>true</filtering>
                            <includes>
                                <include>**/restaurantReserve.xml</include>
                                <include>**/registerApp.jsp</include>
                                <include>**/reservation.jsp</include>
                            </includes>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
